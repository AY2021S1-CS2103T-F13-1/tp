@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model <<Rectangle>>{
Interface ReadOnlyInventoryinator <<Interface>>
Interface Model <<Interface>>
Interface ObservableList <<Interface>>
Class Inventoryinator
Class ReadOnlyInventoryinator
Class Model
Class ModelManager
Class UserPrefs
Class ReadOnlyUserPrefs

Package Item {
Class Item
Class ItemId
Class Description
Class Location
Class ItemName
Class Quantity
Class UniqueItemList
Class LocationIdManager
Class UniqueRecipesManager
Class RecipeList
}
Package Recipes {
Class Recipe
Class Ingredients
Class RecipeID
Class CraftedItem
Class RecipeDescription
}

Package Tag {
Class Tag
}
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

Inventoryinator .up.|> ReadOnlyInventoryinator

ModelManager .up.|> Model
Model .right.> ObservableList
ModelManager o--> "1" Inventoryinator
ModelManager o-left-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

Inventoryinator o--> "1" UniqueItemList
UniqueItemList o--> "*" Item
Inventoryinator o--> "*" LocationIdManager
LocationIdManager o--> "*" Item
Inventoryinator o--> "1" UniqueRecipesManager
UniqueRecipesManager o--> "*" Recipe

Recipe *--> RecipeID
Recipe *--> Ingredients
Recipe *--> CraftedItem
Recipe *--> RecipeDescription
RecipeList o--> "*" RecipeID
Ingredients *--> ItemId
CraftedItem *--> ItemId

Item *--> ItemName
Item *--> Quantity
Item *--> "*"Location
Item *--> Description
Item *--> "*" Tag
Item *--> ItemId
Item *--> "*" RecipeList

ModelManager -->"1" Item : filtered list
@enduml
